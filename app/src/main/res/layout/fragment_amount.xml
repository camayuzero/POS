    <Button
        android:id="@+id/button_500"
        android:layout_width="@dimen/button_width_40dp"
        android:layout_height="@dimen/button_height_35dp"
        android:padding="0dp"
        android:text="@string/button_500"
        android:textSize="@dimen/textSize10sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_00"
        app:layout_constraintEnd_toStartOf="@+id/button_1000"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_00"
        app:layout_constraintTop_toTopOf="@+id/button_00" />

    <Button
        android:id="@+id/button_1000"
