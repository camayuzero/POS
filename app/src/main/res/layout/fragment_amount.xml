        app:layout_constraintBottom_toBottomOf="@+id/button_500"
        app:layout_constraintEnd_toStartOf="@+id/radioGroup_SugarContent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_500"
        app:layout_constraintTop_toTopOf="@+id/button_500" />


    <RadioGroup
        android:id="@+id/radioGroup_SugarContent"
        android:layout_width="@dimen/RadioGroup_layout_width_70dp"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:background="@color/color_TitleBackground03"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/radioGroup_IceContent"
        app:layout_constraintStart_toEndOf="@+id/button_09"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView_SugarContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/color_TitleBackground03"
            android:text="@string/Title_SugarContent"
            android:textAlignment="center"
            android:textSize="@dimen/textSize15sp" />

        <RadioButton
            android:id="@+id/radioButton_Sugar_none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Sugar_none"
            android:textSize="@dimen/textSize15sp" />

        <RadioButton
            android:id="@+id/radioButton_Sugar_Micro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Sugar_Micro"
            android:textSize="@dimen/textSize15sp" />

        <RadioButton
            android:id="@+id/radioButton_Sugar_Less"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Sugar_Less"
            android:textSize="@dimen/textSize15sp" />

        <RadioButton
            android:id="@+id/radioButton_Sugar_Normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Sugar_Normal"
            android:textSize="@dimen/textSize15sp" />

        <RadioButton
            android:id="@+id/radioButton_Sugar_More"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Sugar_More"
            android:textSize="@dimen/textSize15sp" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroup_IceContent"
        android:layout_width="@dimen/RadioGroup_layout_width_70dp"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:background="@color/color_TitleBackground04"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/radioGroup_Ingredients"
        app:layout_constraintStart_toEndOf="@+id/radioGroup_SugarContent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView_IceContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/color_TitleBackground04"
            android:text="@string/Title_IceContent"
            android:textAlignment="center"
            android:textSize="@dimen/textSize15sp" />

        <RadioButton
            android:id="@+id/radioButton_Ice_none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Ice_none"
            android:textSize="@dimen/textSize15sp" />

        <RadioButton
            android:id="@+id/radioButton_Ice_Micro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
