        <RadioButton
            android:id="@+id/radioButton_SmallTapiocaBalls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Ingredients_SmallTapiocaBalls"
            android:textSize="@dimen/textSize12sp" />

        <RadioButton
            android:id="@+id/radioButton_Coconut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Ingredients_Coconut"
            android:textSize="@dimen/textSize15sp" />

        <RadioButton
            android:id="@+id/radioButton_Kanten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Ingredients_Kanten"
            android:textSize="@dimen/textSize15sp" />

        <RadioButton
            android:id="@+id/radioButton_GrassJelly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Ingredients_GrassJelly"
            android:textSize="@dimen/textSize15sp" />

        <RadioButton
            android:id="@+id/radioButton_Pudding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
