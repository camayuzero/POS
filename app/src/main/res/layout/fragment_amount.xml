        app:layout_constraintEnd_toStartOf="@id/radioGroup_SugarContent"
        app:layout_constraintStart_toEndOf="@id/textView_select_commodity_quantity"
        app:layout_constraintTop_toTopOf="@id/textView_select_commodity_quantity"
        app:layout_constraintVertical_bias="0.333" />

    <Button
        android:id="@+id/button_00"
        android:layout_width="@dimen/button_width_40dp"
        android:layout_height="@dimen/button_height_35dp"
        android:layout_marginBottom="1dp"
        android:text="@string/button_00"
        android:textSize="@dimen/textSize15sp"
