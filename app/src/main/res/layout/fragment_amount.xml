            android:text="@string/Ice_Micro"
            android:textSize="@dimen/textSize15sp" />

        <RadioButton
            android:id="@+id/radioButton_Ice_Less"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Ice_Less"
            android:textSize="@dimen/textSize15sp" />

        <RadioButton
            android:id="@+id/radioButton_Ice_Normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Ice_Normal"
            android:textSize="@dimen/textSize15sp" />

        <RadioButton
            android:id="@+id/radioButton_Ice_More"
