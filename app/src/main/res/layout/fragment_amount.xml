    <TextView
        android:id="@+id/textView_select_commodity_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:background="@color/color_TitleBackground"
        android:text="@string/DrinksTitle_Name"
        android:textSize="@dimen/textSize15sp"
        app:layout_constraintBottom_toTopOf="@id/textView_select_commodity_price"
        app:layout_constraintEnd_toStartOf="@id/editText_select_commodity_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <EditText
        android:id="@+id/editText_select_commodity_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:background="@color/color_EditTextBackground"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPersonName"
        android:textSize="@dimen/textSize15sp"
        android:textAlignment="textEnd"
        android:textColor="@color/color_EditText_Text"
        app:layout_constraintBottom_toBottomOf="@id/textView_select_commodity_name"
        app:layout_constraintEnd_toStartOf="@id/radioGroup_SugarContent"
        app:layout_constraintStart_toEndOf="@id/textView_select_commodity_name"
        app:layout_constraintTop_toTopOf="@id/textView_select_commodity_name"
        app:layout_constraintVertical_bias="0.333" />

    <TextView
        android:id="@+id/textView_select_commodity_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:background="@color/color_TitleBackground"
        android:text="@string/DrinksTitle_Price"
        android:textSize="@dimen/textSize15sp"
        app:layout_constraintBottom_toTopOf="@id/textView_select_commodity_quantity"
        app:layout_constraintEnd_toStartOf="@id/editText_select_commodity_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_select_commodity_name" />

    <EditText
        android:id="@+id/editText_select_commodity_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:background="@color/color_EditTextBackground"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPersonName"
        android:textSize="@dimen/textSize15sp"
        android:textAlignment="textEnd"
        android:textColor="@color/color_EditText_Text"
        app:layout_constraintBottom_toBottomOf="@id/textView_select_commodity_price"
        app:layout_constraintEnd_toStartOf="@id/radioGroup_SugarContent"
        app:layout_constraintStart_toEndOf="@id/textView_select_commodity_price"
        app:layout_constraintTop_toTopOf="@id/textView_select_commodity_price"
        app:layout_constraintVertical_bias="0.333" />

    <TextView
        android:id="@+id/textView_select_commodity_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:background="@color/color_TitleBackground"
        android:text="@string/DrinksTitle_Quantity"
        android:textSize="@dimen/textSize15sp"
        app:layout_constraintBottom_toTopOf="@id/button_07"
        app:layout_constraintEnd_toStartOf="@id/editText_select_commodity_quantity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_select_commodity_price" />

    <EditText
        android:id="@+id/editText_select_commodity_quantity"
