    <Button
        android:id="@+id/button_04"
        android:layout_width="@dimen/button_width_40dp"
        android:layout_height="@dimen/button_height_35dp"
        android:text="@string/button_04"
        android:textSize="@dimen/textSize15sp"
        android:padding="0dp"
        app:layout_constraintBottom_toTopOf="@+id/button_01"
        app:layout_constraintEnd_toEndOf="@+id/button_07"
        app:layout_constraintEnd_toStartOf="@+id/button_05"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_07" />

    <Button
        android:id="@+id/button_05"
        android:layout_width="@dimen/button_width_40dp"
        android:layout_height="@dimen/button_height_35dp"
        android:text="@string/button_05"
        android:textSize="@dimen/textSize15sp"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_04"
        app:layout_constraintEnd_toStartOf="@+id/button_06"
        app:layout_constraintHorizontal_bias="0.5"
