        android:textSize="@dimen/textSize15sp"
        android:padding="0dp"
        app:layout_constraintBottom_toTopOf="@+id/button_04"
        app:layout_constraintEnd_toStartOf="@+id/button_08"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_select_commodity_quantity" />

    <Button
        android:id="@+id/button_08"
        android:layout_width="@dimen/button_width_40dp"
        android:layout_height="@dimen/button_height_35dp"
        android:text="@string/button_08"
        android:textSize="@dimen/textSize15sp"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_07"
        app:layout_constraintEnd_toStartOf="@+id/button_09"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_07"
        app:layout_constraintTop_toTopOf="@+id/button_07" />

    <Button
        android:id="@+id/button_09"
        android:layout_width="@dimen/button_width_40dp"
        android:layout_height="@dimen/button_height_35dp"
        android:text="@string/button_09"
        android:textSize="@dimen/textSize15sp"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_08"
